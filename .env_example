# Root .env sample

# ===== Backend =====
ENVIRONMENT=development
API_HOST=127.0.0.1
API_PORT=8000

POSTGRES_HOST=localhost
POSTGRES_PORT=15432
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=1234
POSTGRES_DB=lms_mvp_db

# ===== JWT/Security =====
JWT_SECRET=dev_secret_change_me_in_production
JWT_EXPIRES_IN_MIN=15
REFRESH_EXPIRES_IN_DAYS=14

LM_ENABLED=true
# ===== LLM / OpenRouter =====
OPENROUTER_API_KEY=
LLM_PROVIDER=openrouter
OPENROUTER_MODEL=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_TIMEOUT_MS=15000
LLM_MAX_RETRIES=3
LLM_ENABLED=true
LLM_CACHE_TTL_SECONDS=600
LLM_MAX_RPM=120

# ===== AI Features =====
# AI 문제 생성 관련 설정
AI_QUESTION_GENERATION_ENABLED=true
AI_MAX_QUESTIONS_PER_REQUEST=10
AI_FEEDBACK_ENABLED=true

# ===== Frontend (Vite) =====
# If frontend reads from env, copy to frontend/.env as VITE_*
VITE_API_BASE_URL=http://localhost:8000


# Neon PostgreSQL
DATABASE_URL=

# Upstash Redis
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
UPSTASH_REDIS_READONLY_REST_TOKEN=

