# Root .env sample

# ===== Backend =====
ENVIRONMENT=development
API_HOST=127.0.0.1
API_PORT=8000

POSTGRES_HOST=localhost
POSTGRES_PORT=15432
POSTGRES_USER=lms_user
POSTGRES_PASSWORD=1234
POSTGRES_DB=lms_mvp_db

# ===== JWT/Security =====
JWT_SECRET=dev_secret_change_me_in_production
JWT_EXPIRES_IN_MIN=15
REFRESH_EXPIRES_IN_DAYS=14

# ===== LLM / OpenRouter =====
OPENROUTER_API_KEY=put-your-openrouter-key-here
LLM_PROVIDER=openrouter
OPENROUTER_MODEL=google/gemma-2-9b-it
LLM_TIMEOUT_MS=15000
LLM_MAX_RETRIES=3
LLM_ENABLED=true
LLM_CACHE_TTL_SECONDS=600
LLM_MAX_RPM=120

# ===== AI Features =====
# AI 문제 생성 관련 설정
AI_QUESTION_GENERATION_ENABLED=true
AI_MAX_QUESTIONS_PER_REQUEST=10
AI_FEEDBACK_ENABLED=true

# ===== Email (SMTP) =====
# Gmail SMTP 설정 (앱 비밀번호 필요)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=EduAI
FRONTEND_URL=http://localhost:5174

# ===== Frontend (Vite) =====
# If frontend reads from env, copy to frontend/.env as VITE_*
VITE_API_BASE_URL=http://localhost:8000


